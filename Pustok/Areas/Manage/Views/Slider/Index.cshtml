@model List<Slider>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-md-12 mx-auto my-5">
            <a asp-action="create" class="btn btn-info my-3">Create</a>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Title</th>
                        <th scope="col">SUbtitle</th>
                        <th scope="col">Description</th>
                        <th scope="col">BtnText</th>
                        <th scope="col">BtnUrl</th>
                        <th scope="col">Image</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var slider in Model)
                     {
                        <tr>
                            <th scope="row">1</th>
                            <td>@slider.Title</td>
                            <td>@slider.SubTitle</td>
                            <td>@slider.Desc</td>
                            <td>@slider.BtnText</td>
                            <td>@slider.BtnUrl</td>
                            <td>
                                <img src="~/uploads/sliders/@slider.Image" alt="Alternate Text" />
                            </td>
                            <td>
                                <a asp-action="edit" asp-route-id="@slider.Id" class="btn btn-warning">Edit</a>
                                <a asp-action="delete" asp-route-id="@slider.Id" class="btn btn-danger sweet-delete">Delete</a>
                            </td>
                        </tr>
                     }

                </tbody>
            </table>
        </div>
    </div>
</div>

