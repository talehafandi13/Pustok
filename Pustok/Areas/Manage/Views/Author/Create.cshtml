@model Author
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 mx-auto my-4">
            <form asp-action="create" method="post">
                <div class="mb-3">
                    <label asp-for="FullName" class="form-label">FullName</label>
                    <input asp-for="FullName" class="form-control text-light">
                    <span asp-validation-for="FullName"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="BirthDate" class="form-label">Birthdate</label>
                    <input asp-for="BirthDate" type="date" class="form-control text-light">
                    <span asp-validation-for="BirthDate"></span>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>
