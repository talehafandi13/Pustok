@model MemberResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
}

<main class="page-section inner-page-sec-padding-bottom">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-xs-12 col-lg-6 mb--30 mb-lg--0 mx-auto">
                <form asp-action="ResetPassword" method="post">
                    <div class="login-form col-md-6 mx-auto my-4">
                        <h4 class="login-title">Returning Customer</h4>
                        <p><span class="font-weight-bold">I am a customer</span></p>
                        <div class="row">
                            <div class="col-lg-12 mb--20">
                                <label asp-for="Password">Password</label>
                                <input class="mb-0 form-control" asp-for="Password" placeholder="Enter your Password">
                                <span class="text-danger" asp-validation-for="Password"></span>
                            </div>
                            <div class="col-lg-12 mb--20">
                                <label asp-for="ConfirmPassword">ConfirmPassword</label>
                                <input class="mb-0 form-control" asp-for="ConfirmPassword" placeholder="Enter your ConfirmPassword">
                                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                            </div>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="col-md-12">
                                <button type="submit" class="btn btn-outlined">Submit</button>
                            </div>
                        </div>
                    </div>
                    <input type="hidden" name="Email" value="@Model.Email" />
                    <input type="hidden" name="Token" value="@Model.Token" />
                </form>

            </div>
        </div>
    </div>
</main>


