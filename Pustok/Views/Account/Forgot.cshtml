@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot";
}

<form asp-action="forgot" method="post">
    <div class="login-form col-md-6 mx-auto my-4">
        <h4 class="login-title">Returning Customer</h4>
        <p><span class="font-weight-bold">I am a customer</span></p>
        <div class="row">
            <div class="col-lg-12 mb--20">
                <label asp-for="Email">Email</label>
                <input class="mb-0 form-control" asp-for="Email" placeholder="Enter your email">
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-12">
                <button type="submit" class="btn btn-outlined">Submit</button>
            </div>
        </div>
    </div>
</form>


